<!DOCTYPE html>
<html>
  <head>
    <title>WebHunt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('favicon-32x32.png') %>
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'bundle' %>

    <% if logged_in? %>
      <script>
        window.currentUser =
        <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>
    <script>
      window.pp = "<%= image_url('user.png') %>"
      window.hp = "<%= image_url('header.png') %>"
    </script>

    <script src="https://kit.fontawesome.com/88924c6e5b.js" crossorigin="anonymous"></script>

    <meta property="og:image" content="<%= image_url('wh-screenshot.png') %>">
	  <meta property="og:description" content="Inspired by Product Hunt, coders can create and share posts about their favorite tech tools.">
  </head>
  <body>
    <%= yield %>
  </body>
</html>
